{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom.iterable", "webworker"],
    "types": ["@cloudflare/workers-types"],
    "skipDefaultLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noEmit": true,
  },
  "include": [
    "challenges/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/build/**"
  ]
}
